<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="estate_property_view_tree" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="Channel">
                    <field decoration-success="state in ['accepted', 'recieved']" 
                        decoration-bf="state == 'accepted'" 
                        decoration-muted="state == 'sold'"
                        name="name"/>
                    <field decoration-success="state in ['accepted', 'recieved']" 
                        decoration-bf="state == 'accepted'" 
                        decoration-muted="state == 'sold'"
                        name="postcode"/>
                    <field decoration-success="state in ['accepted', 'recieved']" 
                        decoration-bf="state == 'accepted'" 
                        decoration-muted="state == 'sold'"
                        name="bedrooms"/>
                    <field decoration-success="state in ['accepted', 'recieved']" 
                        decoration-bf="state == 'accepted'" 
                        decoration-muted="state == 'sold'"
                        name="living_area"/>
                    <field decoration-success="state in ['accepted', 'recieved']" 
                        decoration-bf="state == 'accepted'" 
                        decoration-muted="state == 'sold'"
                        name="expected_price"/>
                    <field decoration-success="state in ['accepted', 'recieved']" 
                        decoration-bf="state == 'accepted'" 
                        decoration-muted="state == 'sold'"
                        name="selling_price"/>
                    <field decoration-success="state in ['accepted', 'recieved']" 
                        decoration-bf="state == 'accepted'" 
                        decoration-muted="state == 'sold'"
                        name="date_available" optional="1"/>
                    <field decoration-success="state in ['accepted', 'recieved']" 
                        decoration-bf="state == 'accepted'" 
                        decoration-muted="state == 'sold'"
                        name="property_type_id" string="Property Type"/>
                    <field name="property_tag_ids" 
                        string="Tags" widget="many2many_tags" 
                        options="{'color_field': 'color'}"/>
                    <field invisible="1" optional="True" name="state"/>
                </tree>
            </field>
        </record>


        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <group invisible="state == 'sold' or state == 'canceled'">
                            <button name="action_sold" type="object" string="Sold"/>
                            <button name="action_cancel" type="object" string="Cancel"/>
                        </group>
                        <field name="state" widget="statusbar" statusbar_visible="new,recieved,accepted,sold"/>
                    </header>
                    <sheet>
                        <div>
                            <div>
                                <label for="name"/>
                            </div>
                            <h1 class="mb32">
                                <field name="name" class="mb16"/>
                            </h1>
                            <field name="property_tag_ids" string="Tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>

                        <div class="d-flex ">                    
                            <group>
                                <field name="property_type_id" options="{'no_create': true}" string="Property Type"/>
                                <field name="postcode"/>
                                <field name="date_available"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field string="Best Offer" name="best_price"/>
                                <field name="selling_price"/>
                            </group>
                        </div>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field string="Living Area (sqm)" name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field string="Garden Area (sqm)" name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field string="Total Area (sqm)" name="total_area"/>
                                    <field name="state"/>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field string="Salesman" name="salesperson_id"/>
                                    <field string="Buyer" name="buyer_id"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids" readonly="state == 'accepted' or state == 'sold' or state == 'canceled'"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_search" model="ir.ui.view">
            <field name="name">estate.propety.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field string="Living Area (sqm)" 
                        name="living_area"
                        filter_domain="[('living_area', '>=', self)]"/>
                    <field name="facades"/>
                    <field name="property_type_id" string="Property Type"/>
                    <separator/>
                    <filter string="Available" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'recieved')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_type_action" model="ir.actions.act_window">
            <field name="name">Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="estate_property_type_view_tree" model="ir.ui.view">
            <field name="name">estate.property.type.tree</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sequence" widget="handle"/>
                </tree>
            </field>
        </record>

        <record id="estate_property_type_view_form" model="ir.ui.view">
            <field name="name">estate.property.type.form</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button class="oe_stat_button" type="action"
                                    name="test" icon="fa-book"
                                    context="{}">
                                    <div class="o_stat_info">
                                        <span class="o_stat_text">Journal Entries</span>
                                    </div>
                            </button>
                        </div>
                        <div>
                            <div>
                                <label for="name"/>
                            </div>
                            <h1 class="mb32">
                                <field name="name" class="mb16"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Properties">                            
                                <field name="property_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>    
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_tag_action" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="estate_property_tag_view_tree" model="ir.ui.view">
            <field name="name">estate.property.tag.tree</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>

        <record id="estate_property_offer_view_tree" model="ir.ui.view">
            <field name="name">estate.property.offer.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Channel">
                    <field decoration-danger="status == 'refused'" decoration-success="status == 'accepted'" name="price"/>
                    <field decoration-danger="status == 'refused'" decoration-success="status == 'accepted'" name="partner_id"/>
                    <field decoration-danger="status == 'refused'" decoration-success="status == 'accepted'" name="validity"/>
                    <field decoration-danger="status == 'refused'" decoration-success="status == 'accepted'" name="date_deadline"/>
                    <field name="status" invisible="1"/>
                    <button name="action_confirm" title="confirm" type="object" icon="fa-check" invisible="status"/>
                    <button name="action_decline" title="decline" type="object" icon="fa-times" invisible="status"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
